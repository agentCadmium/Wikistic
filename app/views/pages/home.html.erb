<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">Wikistic</span>, Yelp for schooling options</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Location", class: "form-control", id: "autolocation" %>
		</div>

		<div class="col-md-2">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
<br>
<hr>
<div class="row">
	<% @schools.each do |school| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<% if school.photos.count > 0 %>
						<%= image_tag school.photos[0].image.url(:medium), class:"img-medium"%>
					<% else %>
						<%= image_tag ("default.jpg"), class: "img-responsive"%>
					<% end %>
				</div>
				<div class="panel-body">
					<%= link_to school.school_name, school %>
				</div>
			</div>
		</div>
	<% end %>
</div>
